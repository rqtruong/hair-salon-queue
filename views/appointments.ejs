<% include ../partials/header %>

    <div id="appointments">
        <h3 class="title"><i class="fas fa-calendar-check"></i> Check-In</h3>
        <div class="flash-container">
            <% if(error && error.length > 0){ %>
                <div role="alert">
                    <%= error %>
                </div>
            <% } %>
            <% if(success && success.length > 0){ %>
                <div role="alert">
                    <%= success %>
                </div>
            <% } %>
        </div>
        <h4>Your estimated wait: <%= estimateValueLow + " â€” " + estimateValueHigh %> minutes</h4>
        <form action="/appointments" method="POST" id="check-in-form">
            <input type="text" name="name" placeholder="name" required>
            <input type="tel" name="phone" placeholder="phone" required> 
            <fieldset id="party-of">
                <label for="customerCount">Party of:</label>
                <input type="number" name="customerCount" value=1 min=1 max=5 required>
            </fieldset>
            <input type="submit" class="btn btn-primary btn-sm" value="Book Now">
        </form>
    </div>

<script src="scripts/phoneformat.js" type="text/javascript"></script>
<% include ../partials/footer %>